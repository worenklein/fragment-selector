{
  "name": "__MSG_extName__",
  "default_locale": "en",
  "version": "0.2.1",
  "description": "Use Url Fragments to scroll an item into view.",
  
  "browser_action": {
	"default_icon" : { "19" : "img/reticle-19.png",
					   "38" : "img/reticle-38.png"},
	"default_title" : "jQuery Fragment Selector",
	"default_popup" : "popup.html"
  },
  "content_scripts": [
	{
	  "run_at": "document_end",
	  "matches": ["http://*/*","https://*/*"],
	  "js": ["jquery-2.1.4.min.js","page.js"]
	}
  ],
 "web_accessible_resources": ["test.png" ],
  "manifest_version": 2
}
